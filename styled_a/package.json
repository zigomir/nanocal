{
  "private": true,
  "scripts": {
    "dev": "npm run dev:rollup & servor . test.html --no-browser --no-reload",
    "dev:rollup": "rollup stylish-calendar.js -c -w",
    "purgecss": "purgecss --css build/stylish-calendar.min.css --content *.svelte --out build",
    "build": "rm -rf build && rollup stylish-calendar.js -c && npm run purgecss && cleancss -o build/stylish-calendar.min.css build/stylish-calendar.min.css && bundlesize"
  },
  "bundlesize": [
    {
      "path": "build/stylish-calendar.min.js",
      "maxSize": "6.5 kB"
    }
  ],
  "devDependencies": {
    "bundlesize": "^0.18.0",
    "clean-css-cli": "^4.3.0",
    "purgecss": "^1.3.0",
    "rollup": "^1.19.2",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.1",
    "servor": "^2.2.1",
    "svelte": "^3.7.0",
    "tailwindcss": "^1.0.6"
  }
}
