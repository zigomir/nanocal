  },
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "purgecss": "^1.3.0",
    "rollup": "^1.12.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "servor": "^2.2.1",
    "svelte": "^3.4.1",
    "tailwindcss": "^1.0.1"
  }
}
